= form_for @todo do |f|
  -if @todo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@todo.errors.count, "error")} prohibited this todo from being saved:"
      %ul
        - @todo.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :order
    = f.text_field :order
  .field
    = f.label :done
    = f.check_box :done
  .actions
    = f.submit 'Save'
